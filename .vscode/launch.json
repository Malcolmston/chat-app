    "version": "0.2.0",
    "configurations": [
        {
            "address": "3000",
            "localRoot": "${workspaceFolder}",
            "name": "Attach to Remote",
            "port": 3000,
            "remoteRoot": "Absolute path to the remote directory containing the program",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "index.js"
        }
    ]
}